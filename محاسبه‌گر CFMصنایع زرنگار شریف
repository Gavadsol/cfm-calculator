<body>
  <h1>صنایع زرنگار شریف</h1>
  <p>محاسبه‌گر CFM (مقدار گردش هوا)</p>

  <label for="length">طول اتاق (متر):</label>
  <input type="number" id="length" placeholder="مثلاً 5" step="0.01">

  <label for="width">عرض اتاق (متر):</label>
  <input type="number" id="width" placeholder="مثلاً 4" step="0.01">

  <label for="height">ارتفاع سقف (متر):</label>
  <input type="number" id="height" placeholder="مثلاً 3" step="0.01">

  <label for="ach">تعداد تعویض هوا در ساعت (ACH):</label>
  <input type="number" id="ach" placeholder="مثلاً 6" step="0.1">

  <button onclick="calculateCFM()">محاسبه کن</button>

  <div id="result"></div>

  <footer>
    © 2025 صنایع زرنگار شریف
  </footer>

  <script>
    function calculateCFM() {
      const l = parseFloat(document.getElementById('length').value);
      const w = parseFloat(document.getElementById('width').value);
      const h = parseFloat(document.getElementById('height').value);
      const ach = parseFloat(document.getElementById('ach').value);
      const res = document.getElementById('result');

      if (![l, w, h, ach].every(v => !isNaN(v) && v > 0)) {
        res.innerHTML = "<span style='color:red'>لطفاً همه مقادیر را به‌درستی وارد کنید.</span>";
        return;
      }
      const m3 = l * w * h;
      const ft3 = m3 * 35.3147;
      const cfm = ft3 * ach / 60;

      res.innerHTML = `
        حجم اتاق: <strong>${m3.toFixed(2)}</strong> متر³<br>
        معادل: <strong>${ft3.toFixed(2)}</strong> فوت³<br>
        🔧 <strong>CFM نیازمندی: ${cfm.toFixed(2)}</strong>
      `;
    }
  </script>
